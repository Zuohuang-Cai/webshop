<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand">Admin Panel</a>
            <div>
                <a class="btn btn-outline-secondary border-0" href="/admin" role="button"
                    aria-disabled="true">orders</a>
                <a class="btn btn-primary border-0" role="button" href="products">products</a>
            </div>
        </div>
    </nav>
    <div class="container">

        <div class="container-fluid p-0">
            <div class="row justify-content-center align-items-center justify-content-between py-3 m-0">
                <div class="col-2 p-0 d-flex justify-content-start">
                    <!-- <a class="btn btn-outline-secondary m-1" href="reset">reset product</a>
                    <a class="btn btn-outline-secondary m-1" href="opslag">opslag backup</a> -->
                </div>
                <div class="d-flex col-2 p-0 justify-content-end"><a href="add_product"><svg
                            xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor"
                            class="bi bi-plus-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path
                                d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                        </svg></a>
                </div>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Naam</th>
                    <th scope="col">Prijs</th>
                    <th scope="col">Afbelding</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% for (const key in Winkelwagen) { %>
                    <tr>
                        <th>
                            <%=Winkelwagen[key].id %>
                        </th>
                        <td>
                            <%=Winkelwagen[key].productnaam%>
                        </td>
                        <td>
                            <%=Winkelwagen[key].prijs%>
                        </td>
                        <td>
                            <%=Winkelwagen[key].afbeelding_url%>
                        </td>
                        <td>
                            <a style="text-decoration: none;" href="edit/<%=Winkelwagen[key].productnaam%>">Edit</a>
                        </td>
                        <td>
                            <a style="text-decoration: none; color: red;"
                                href="remove/<%=Winkelwagen[key].id%>">Remove</a>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>