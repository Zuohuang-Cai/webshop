<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"
    defer></script>
  <link rel="stylesheet" href="stylesheets/style.css">
</head>

<body>

  <!-- navbar -->
  <nav class="navbar navbar-expand-lg bg-body-tertiary position-sticky sticky-top">
    <div class="container">
      <a class="navbar-brand" href="#">Bit Academy</a>
      <a class="text-black text-decoration-none" style="border:none" data-bs-toggle="tooltip" data-bs-placement="left"
        data-bs-title="er is nieuw post" href="chat">chat room</a>
      <div class="ml-auto">
        <a class="text-black bg-white" style="border:none" data-bs-toggle="tooltip" data-bs-placement="left"
          data-bs-title="er is nieuw post" href="betalen.ejs">
          <span class="position-relative">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-cart-fill"
              viewBox="0 0 16 16">
              <path
                d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
            </svg>
            <!-- change the display there d-none replace to other -->
            <span style="visibility: hidden;"
              class="position-absolute top-2 start-200 translate-middle p-2 bg-danger border border-light rounded-circle"
              id="winkelwagen">
              <span class="visually-hidden">New alerts</span>
            </span>
          </span>
        </a>
      </div>

    </div>
  </nav>



  <!-- product -->
  <div class="container align-items-center" id="container">

    <div class="row" id='template_row' style="padding-left: 18%;">
      <!-- <template id="col"> -->
      <% for (const key in Winkelwagen) { %>
        <div class="d-flex col-5 justify-content-center py-1" id="template_col">
          <div class="card w-100">
            <img src="<%= Winkelwagen[key].afbeelding_url %>" class="card-img-top"
              style="max-width: 100%; height: 400px" alt="...">
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <li class="list-group-item text-center" id="Prijs">
                  <%= Winkelwagen[key].productnaam %>
                </li>
                <li class="list-group-item text-center" id="Naam">
                  <%= Winkelwagen[key].prijs %>
                </li>
                <input type="number" class="form-control text-center" id="afzet" min="1" value="1"
                  onchange="opslaan(this.value, event)">
                <li class="list-group-item text-center"><button type="button"
                    onclick="add(this,'<%= Winkelwagen[key].id %>')" class="btn btn-primary w-100">Voeg In
                    Winkelwagen</button>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <% } %>
    </div>
    <!-- </template> -->


</body>
<script src="json/winkelwagen.json"></script>
<script src="json/product.json"></script>
<script src="javascripts/script.js"></script>

</html>