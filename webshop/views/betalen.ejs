        defer></script>
</head>

<body>
    <!-- navbar  -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" href="#">Bit Academy</a>
            <div class="ml-auto">
                <button id="clear_garbage" type="button" class="bg-light" style='border:none' data-bs-toggle="tooltip"
                    data-bs-placement="left" data-bs-title="er is nieuw post" onclick="clearall()">
                    <span class="position-relative">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                            class="bi bi-trash3" viewBox="0 0 16 16">
                            <path
                                d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                        </svg>
                        <!-- change the display there d-none replace to other -->
                    </span>
                </button>
            </div>
        </div>
    </nav>

    <div class="container" id="betalencontainer">
        <a href="/">back to homepage</a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Naam</th>
                    <th scope="col">Afzet</th>
                    <th scope="col">Prijs</th>
                    <th scope="col">Total</th>
                </tr>
            </thead>
            <tbody>
                <% for (const key in Winkelwagen) { %>
                    <% if(Winkelwagen[key].afzet!=0){ %>
                        <tr>
                            <th>
                                <%=Winkelwagen[key].productnaam %>
                            </th>
                            <td>
                                <%=Winkelwagen[key].afzet%>
                            </td>
                            <td>
                                <%=Winkelwagen[key].prijs%>
                            </td>
                            <td class="totalprijs">
                                <%=Winkelwagen[key].afzet * Winkelwagen[key].prijs%>
                            </td>
                        </tr>
                        <% } %>
                            <% }%>
            </tbody>
        </table>
        <div class="d-flex justify-content-between container-fluid"><span>Total</span><span id="totalprijs"></span>
        </div>
        <div class="row"><a class="btn btn-primary" href="#" role="button" id="HrefTotalPrijs" onclick="clearall()">Afrond</a></div>
    </div>
</body>
<script>
    function clearall() {
        fetch('/clearall');
        location.reload()
    }
    let i = 0;
    document.querySelectorAll('.totalprijs').forEach((value, index) => i += parseFloat(value.textContent));
    let prijs = document.querySelector('#totalprijs');
    prijs.textContent = i;
    document.querySelector('#HrefTotalPrijs').href='/afrond/'+prijs.textContent
</script>

</html>